<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/list_dialog_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ text from list dialog ~"
        app:layout_constraintBottom_toTopOf="@+id/show_text_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_list_dialog" />

    <Button
        android:id="@+id/show_list_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from a list"
        app:layout_constraintBottom_toTopOf="@+id/list_dialog_choice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_text_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter text"
        app:layout_constraintBottom_toTopOf="@+id/text_dialog_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_dialog_choice" />

    <TextView
        android:id="@+id/text_dialog_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ text from dialog here ~"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_text_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>